@model BannersApp.Models.BannerViewModel
@{
    ViewBag.Title = "Add a new Banner";
    ViewBag.Message = "Fill in the informaion needed for a new banner to be added";
}

<h2 class="crush-font">@ViewBag.Title</h2>
<h3 class="page-description"><i>@ViewBag.Message</i></h3>

@using (Html.BeginForm("Create", "Banners", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{

    <h4>Create a new banner</h4>
    <hr />
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m=> m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>

    @*@Html.ValidationMessageFor(m => m.ImageData, "", new { @class = "text-danger" })*@
    <div class="form-group">
        @Html.Label("Picture", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBox("picture", "Choose a picture", new { @class = "form-control", id="Picture", type="file" })
        </div>
    </div>

    @Html.ValidationMessageFor(m => m.ValidFrom, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.ValidFrom, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ValidFrom, new { @Value = DateTime.Now, id = "datepicker", @class = "form-control" })
        </div>
    </div>

    @Html.ValidationMessageFor(m => m.ValidTo, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.ValidTo, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ValidTo, new { @Value = DateTime.Now, id = "datepicker-end", @class = "form-control" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add" />
        </div>
    </div>
}

@section scripts{
   <script src="~/Scripts/datepicker.js" type="text/javascript"></script>
}