@model System.Web.Mvc.HandleErrorInfo
@using BannersApp.Infrastructure;

@{
    ViewBag.Title = "Error!";
}

<h1 >@ViewBag.Title</h1>
<h2 class="text-danger">@Model.Exception.Message</h2>

<div class="jumbotron custom-jumbo" id="errors-jumbo" style="background-image:url(@Constants.ErrorsPageBgImage)">
    <h1><span class="text-warning">@ViewBag.Title</span></h1>
    <p class="text-warning">An error occurred while processing your request.</p>
    <h2 class="text-danger">@Model.Exception.Message</h2>
</div>